\backslash
theta$}; 
\backslash
draw [line width=2pt,-latex,cap=round] (mid) -- +(270:2.3) coordinate (mg)
 node [below] {$mg$};
\end_layout

\begin_layout Plain Layout


\backslash
draw pic ["$
\backslash
theta$",draw,thick,angle radius=1.4cm,angle eccentricity=1.2] {angle = mg--mid--co
s};
\end_layout

