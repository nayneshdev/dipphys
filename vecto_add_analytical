\begin{tikzpicture} 

\draw [help lines,color=lightgray] (0,0) grid (6,6);

\draw [-latex,thick] (0,0) coordinate (O)-- (0:4) coordinate (A) node [midway,below] {\textbf{A}};

\draw [-latex,thick] (A) -- ++(50:3.5) coordinate (B) node [midway,below] {\textbf{B}};

\draw[very thick,-latex] (O)--(B);

\draw [dashed,thick] (C) -- ($(O)!(B)!(C)$);

\end{tikzpicture}

